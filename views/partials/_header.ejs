<!doctype html>


    <% if(user) { %>

      <form method="POST" action="/logout">
        <h1>Username: <%= user.email %></h1>
        <button>LOGOUT</button>

      </form>

    <% } else{ %>

        <form method="POST" action="/login">



        <input name="username">
        <button>Sign In </button>

    </form>



    <% } %>
